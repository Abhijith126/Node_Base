{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "plugins": ["prettier"],
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 1,
        "no-unreachable": 2,
        "no-constant-condition": 2,
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-catch-shadow": 2,
        "prefer-spread": 1,
        "array-bracket-spacing": [2, "always"],
        "curly": 2,
        "dot-notation": 2,
        "id-length": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-else-return": 2,
        "no-inner-declarations": 2,
        "no-lonely-if": 2,
        "no-shadow": 2,
        "no-unneeded-ternary": 2,
        "no-unused-vars": [
            2,
            {
                "args": "none"
            }
        ],
        "no-useless-return": 2,
        "no-var": 2,
        "one-var": [2, "never"],
        "prefer-arrow-callback": 2,
        "prefer-const": 2,
        "prefer-promise-reject-errors": 2,
        "prettier/prettier": 2,
        "strict": [2, "global"]
    }
}
